<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <Button
        android:id="@+id/showStandartDialog"
        android:text="Show standart dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/showEasyDialog_1"
        android:text="Show EA Dialog - 1 btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/showEasyDialog_2"
        android:text="Show EA Dialog - 2 btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/showEasyDialog_3"
        android:text="Show EA Dialog - 3 btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/showEAActivityDialog"
        android:text="Show custom dialog from background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
